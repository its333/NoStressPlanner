{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    // Allow console statements in development
    "no-console": "off",
    
    // Allow any types but warn about them
    "@typescript-eslint/no-explicit-any": "off",
    
    // Allow non-null assertions but warn
    "@typescript-eslint/no-non-null-assertion": "off",
    
    // Allow unused variables that start with underscore
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    
    // Allow Function type but warn
    "@typescript-eslint/ban-types": "off",
    
    // Allow await in loops but warn
    "no-await-in-loop": "off",
    
    // Allow unescaped entities but warn
    "react/no-unescaped-entities": "off",
    
    // Import order warnings only
    "import/order": "off",
    
    // React hooks warnings only
    "react-hooks/exhaustive-deps": "off"
  }
}
