#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-push validation (temporarily disabled for deployment)
echo "🚀 Pre-push checks temporarily disabled for deployment..."

# Just run build check (no database required)
echo "🏗️ Running build check..."
npm run build

if [ $? -ne 0 ]; then
  echo "❌ Build failed! Please fix build errors before pushing."
  exit 1
fi

echo "✅ Build check passed! Tests skipped for deployment."
