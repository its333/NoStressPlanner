modules = ["nodejs-18"]

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "chmod +x replit-run.sh && ./replit-run.sh"]
healthcheckPath = "/"
healthcheckTimeout = 10
restartPolicy = { maxRetries = 3 }

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:$PATH"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".replitignore"]

[unitTest]
language = "nodejs"

[languages]

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx,*.json}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[debugger]
support = true

[debugger.interactive]
transport = "localhost:0"
startCommand = ["dap-node", "--port", "0", "--inspect=0.0.0.0:0", "pnpm", "dev"]

[debugger.interactive.integratedAdapter]
dapTcpPort = 0

[debugger.interactive.initializeMessage]
command = "initialize"
type = "request"

[debugger.interactive.initializeMessage.arguments]
adapterID = "node"
clientID = "replit"
clientName = "replit.com"
columnsStartAt1 = true
linesStartAt1 = true
locale = "en-us"
pathFormat = "path"
supportsInvalidatedEvent = true
supportsProgressReporting = true
supportsRunInTerminalRequest = true
supportsVariablePaging = true
supportsVariableType = true

[debugger.interactive.launchMessage]
command = "launch"
type = "request"

[debugger.interactive.launchMessage.arguments]
console = "integratedTerminal"
cwd = "."
pauseForSourceMap = false
program = "${workspaceFolder}/node_modules/.bin/next"
request = "launch"
sourceMaps = true
stopOnEntry = false
type = "node"
