{
    "name": "no-stress-planner",
    "version": "0.1.1",
    "private": true,
    "engines": {
        "node": ">=18.18.0"
    },
    "scripts": {
        "dev": "next dev --port 3001",
        "dev:replit": "next dev --port 3001 --hostname 0.0.0.0",
        "build": "next build",
        "start": "next start",
        "start:replit": "next start --port 3001 --hostname 0.0.0.0",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "tsc --noEmit",
        "test": "pnpm test:unit && pnpm test:e2e",
        "test:unit": "vitest run",
        "test:unit:watch": "vitest",
        "test:e2e": "playwright test",
        "replit:setup": "pnpm install && pnpm prisma generate",
        "replit:deploy": "pnpm prisma migrate deploy && pnpm build",
        "test:e2e:headed": "playwright test --headed",
        "test:coverage": "vitest run --coverage",
        "quality": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm test:unit",
        "quality:fix": "pnpm lint:fix && pnpm format",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev --name init",
        "prisma:deploy": "prisma migrate deploy",
        "generate:secrets": "node scripts/generate-secrets.mjs",
        "prepare": "husky install"
    },
    "dependencies": {
        "@auth/prisma-adapter": "^2.10.0",
        "@prisma/client": "^6.16.2",
        "date-fns": "^4.1.0",
        "ioredis": "^5.7.0",
        "next": "^15.5.3",
        "next-auth": "5.0.0-beta.29",
        "pusher": "^5.2.0",
        "pusher-js": "^8.4.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "swr": "^2.3.6",
        "tailwindcss": "^3.4.17",
        "zod": "^4.1.9"
    },
    "devDependencies": {
        "@playwright/test": "^1.48.2",
        "@types/node": "^20.14.10",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitest/coverage-v8": "^1.6.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^8.57.0",
        "eslint-config-next": "^15.5.3",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-unused-imports": "^3.0.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "postcss": "^8.4.45",
        "prettier": "^3.2.5",
        "prisma": "^6.16.2",
        "typescript": "^5.6.2",
        "vitest": "^1.6.0"
    }
}